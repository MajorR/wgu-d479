{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // lit decorators
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": ["**/*.ts"]
}
